<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

	<!-- Form View Start -->

		<record id="t_form_v_crm_enquiry" model="ir.ui.view">
			<field name="name">Enquiry Entry Form</field>
			<field name="model">kg.crm.enquiry</field>
			<field name="arch" type="xml">
				<form string="CRM Enquiry" version="7.0">
					<header>
						<button name="entry_confirm" type="object" string="Process Offer" states="draft" class="oe_highlight"/>
						<button name="entry_call_back" type="object" string="Call Back" states="draft" class="oe_highlight"/>
						<!--<field name="state" widget="statusbar" 
						statusbar_visible="draft,moved_to_offer,call,quote"
						statusbar_colors='{
                                        "draft":"blue",
                                        "moved_to_offer":"blue"
                                        }'/>-->
					</header>
					<sheet>		
						<group>
							<group>
								<field name="name" readonly="1"/>
								<field name="offer_date"/>
								<field name="customer_id" required="1"/>
								<field name="industry_id"/>
								<field name="call_type"/>
								<field name="ref_mode"/>
								<field name="market_division"/>
								<field name="dealer_id" attrs="{'invisible': [('ref_mode','=','direct')],'required': [('ref_mode','=','dealer')]}"/>
								<field name="note"/>
								<field name="purpose" attrs="{'invisible': [('call_type','=','service')],'required': [('call_type','!=','service')]}"/>
								
								<!--<field name="order_type" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>-->		
								<field name="scope_of_supply" invisible="1"/>						
							</group>											
							<group>
								<field name="enquiry_no"/>
								<field name="enquiry_date"/>
								<field name="due_date" on_change="onchange_due_date(due_date)"/>
								<field name="del_date"/>
								<field name="expected_value"/>								
								<field name="segment"/>		
								<field name="service_det" attrs="{'invisible': [('call_type','!=','service')],'required': [('call_type','=','service')]}"/>					
								<field name="state" style="width: 30%%" class="att_state_change"/>
								<field name="drive" invisible="1"/>
								<field name="transmision" invisible="1"/>
								<field name="acces" invisible="1"/>
							</group>	
						</group>
						<group string="Boundry Parameters" attrs="{'invisible': [('purpose','not in',('pump'))]}">
							<group>
							<field name="capacity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="gravity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="spl_gravity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							</group>
							<group>
							<field name="head" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="chemical_id" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="pump_list" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							</group>
						</group>
						<group string="WO Details" attrs="{'invisible': [('purpose','not in',('spare'))]}">
							<group>
							<field name="pump_id" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							<field name="s_no" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							</group>
							<group>
							<field name="wo_no" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							</group>
						</group>
						<group string="Project Details" attrs="{'invisible': [('purpose','not in',('prj'))]}">
							<field name="requirements" attrs="{'invisible': [('purpose','not in',('prj'))],'required': [('purpose','in',('prj'))]}"/>
						</group>
						
						<group string="Pump Details">
							<field name="ch_line_ids" colspan="4" nolabel="1" context="{'purpose_categ':purpose}">
								<tree string="Pump History">
									<field name="equipment_no" required="1"/>
									<field name="quantity_in_no" required="1"/>
									<field name="description" required="1"/>							  
								</tree>
								
							</field>
						</group>
							
						<button name="list_details" type="object" string="List" states="draft" class="oe_highlight"/>
						
						<group string="Old History">
							<notebook>
								<page string="Customer History">
									<notebook>
										<page string="Enquiry">
											<field name="line_ids" colspan="4" nolabel="1">
												<tree string="Enquiry Details" editable="bottom" delete="false" create="false">
												   <field name="enquiry_id"/>
												   <field name="purpose"/>
												   <field name="due_date"/>
												   <field name="state"/>
												   <field name="call_type"/>
												</tree>
											</field>
										</page>
									</notebook>
									<notebook>
										<page string="Offer"/>
									</notebook>
									<notebook>
										<page string="Work Order"/>
									</notebook>
									<notebook>
										<page string="Outstanding"/>
									</notebook>
									<notebook>
										<page string="Feedback"/>
									</notebook>
								</page>
								
								<page string="Entry Info">
									<group>
										<field name="company_id"/>
									</group>
									<group>
										<field name="active"/>
									</group>
									<group>
										<group>
											<field name="user_id"/>
											<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
											<field name="cancel_user_id" attrs="{'invisible':[('state','not in',['cancel'])]}"/>
											<field name="update_user_id"/>
										</group>
										<group>
											<field name="crt_date"/>
											<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
											<field name="cancel_date" attrs="{'invisible':[('state','not in',['cancel'])]}"/>
											<field name="update_date"/>
										</group>
									</group>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
	<!-- Form View End -->
		
	
	<!-- Tree View Start -->
		
		<record id="t_tree_v_crm_enquiry" model="ir.ui.view">
			<field name="name">CRM Enquiry Entry Tree</field>
			<field name="model">kg.crm.enquiry</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';black:state == 'moved_to_offer';gray:state == 'call'" 
								toolbar="True" string="Enquiry Entry Tree">					
					<field name="name"/>
					<field name="enquiry_date"/>
					<field name="customer_id"/>					
					<field name="state"/>
				</tree>
			</field>
		</record>
		
	<!-- Tree View End -->
	
	<!-- Child Class Tree View Start -->
		
		<record id="t_tree_v_pumpmodel_details" model="ir.ui.view">
			<field name="name">Pumpmodel Details Entry Tree</field>
			<field name="model">ch.kg.crm.pumpmodel</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree string="Pumpmodel Details Entry Tree">					
					<field name="equipment_no"/>
					<field name="quantity_in_no"/>
					<field name="description"/>					
				</tree>
			</field>
		</record>
		
	<!-- Child Class Tree View End -->
	
	<!-- Child Class Form View Start -->
		
		<record id="t_form_v_pumpmodel_details1" model="ir.ui.view">
			<field name="name">Pumpmodel Details Entry Form</field>
			<field name="model">ch.kg.crm.pumpmodel</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<form string="Pumpmodel Details" version="7.0">
					<sheet>
						<group string="Item Details">
							<group>
								<field name="equipment_no" />																
								<field name="quantity_in_no" />																
							</group>											
							<group>
								<field name="description" />													
							</group>					
						</group>
					
						<group string="Liquid Specifications">
							<group>
								<field name="fluid_id" on_change="onchange_liquid(fluid_id)"/>	
								<field name="solid_concen" />																
								<field name="viscosity" />																
								<field name="npsh_avl" />																
							</group>											
							<group>
								<field name="temperature_in_c" />
								<field name="specific_gravity" />
								<field name="max_particle_size_mm" />
								<field name="density" />
							</group>					
						</group>
						<group string="Duty Parameters">
							<group>
								<field name="capacity_in" />
								<field name="suction_pressure" />
								<field name="slurry_correction_in" />
								<field name="suction_pressure_kg" />
								<field name="viscosity_crt_factor" />
							</group>
							<group>
								<field name="head_in" on_change="onchange_head_in(head_in,discharge_pressure_kg,sealing_water_pressure)"/>
								<field name="differential_pressure_kg" />
								<field name="suction_condition" />
								<field name="discharge_pressure_kg" on_change="onchange_head_in(head_in,discharge_pressure_kg,sealing_water_pressure)"/>
								<field name="temperature" />
							</group>					
						</group>
					
						<group string="Pump Specification">
							<group>
								<field name="pump_id" on_change="onchange_pumpmodel(pump_id)"/>
								<field name="pumpseries_id" on_change="onchange_pumpseries(pumpseries_id,flange_standard,flange_type)"/>
								<field name="shaft_sealing"/>
								<field name="scope_of_supply" on_change="onchange_scope_of_supply(scope_of_supply,primemover_categ)"/>
								<field name="number_of_stages" />
								<field name="impeller_type" />
								<field name="impeller_dia_min" />																															
								<field name="size_suctionx" />
								<field name="flange_type" on_change="onchange_flange_type(flange_type,flange_standard)"/>
								<field name="flange_standard" />
								<field name="efficiency_in" on_change="onchange_bkw_liq(bkw_water,bkw_liq,capacity_in,head_in,specific_gravity,efficiency_in,motor_margin)"/>
								<field name="npsh_r_m" />
								<field name="best_efficiency" />
								<field name="bkw_water" />
								<field name="bkw_liq" on_change="onchange_belt_loss_in_kw(belt_loss_in_kw,bkw_liq)"/>
								<field name="impeller_dia_rated" on_change="onchange_impeller_tip_speed(impeller_tip_speed,impeller_dia_rated,full_load_rpm)"/>
								<field name="impeller_tip_speed"/>
								<field name="hydrostatic_test_pressure" />
								<field name="full_load_rpm" on_change="onchange_impeller_tip_speed(impeller_tip_speed,impeller_dia_rated,full_load_rpm)"/>
								<field name="belt_loss_in_kw" on_change="onchange_belt_loss_in_kw(belt_loss_in_kw,bkw_liq)" attrs="{'invisible':[('type_of_drive','not in',['belt_drive'])]}"/>
								<field name="frequency" attrs="{'invisible':[('type_of_drive','not in',['belt_drive','motor_direct'])]}"/>
								<field name="motor_margin" attrs="{'invisible':[('type_of_drive','not in',['belt_drive','motor_direct'])]}"/>
								<field name="motor_kw" attrs="{'invisible':[('type_of_drive','not in',['belt_drive','motor_direct'])]}"/>
								<field name="speed_in_pump" attrs="{'invisible':[('type_of_drive','in',['motor_direct','fc_gb'])]}"/>
								<field name="speed_in_motor" attrs="{'invisible':[('type_of_drive','not in',['belt_drive','motor_direct'])]}"/>
								<field name="engine_rpm" attrs="{'invisible':[('primemover_categ','not in',['engine'])]}"/>
								<field name="end_of_the_curve" attrs="{'invisible':[('type_of_drive','not in',['belt_drive','motor_direct'])]}"/>
								<field name="engine_kw" attrs="{'invisible':[('primemover_categ','not in',['engine'])]}"/>
								<field name="drive" invisible="1"/>
							</group>											
							<group>
								<field name="maximum_allowable_soild" />
								<field name="impeller_number" />
								<field name="impeller_dia_max" />
								<field name="max_allowable_test" />
								<field name="crm_type" />
								<field name="casing_design" />
								<field name="shut_off_head" />
								<field name="minimum_contionuous" />
								<field name="specific_speed" />
								<field name="suction_specific_speed" />
								<field name="sealing_water_pressure" />
								<field name="sealing_water_capacity" />
								<field name="gd_sq_value" />
								<field name="critical_speed" />
								<field name="bearing_make" />
								<field name="bearing_number_nde" />
								<field name="bearing_qty_nde" />
								<field name="type_of_drive"/>
								<field name="primemover_categ"/>
								<field name="primemover_id" on_change="onchange_primemover(primemover_id)"/>
							</group>
						</group>
						<group string="Accessories">
							<group>
								<field name="acces"/>
							</group>
							<group>
								<field name="acces_type" attrs="{'required':[('acces','=','yes')]}"/>
							</group>
						</group>
						<group>
							<group>
								<field name="moc_const_id" on_change="onchange_moc(moc_const_id,flag_standard)"/>
								<field name="flag_standard"/>
							</group>
							<group>
								<button name="load_non_standard" type="object" string="Load" class="oe_highlight"/>
							</group>
						</group>
						
					<notebook>
						<page string="MOC part details">
							<field name="line_ids_moc_a" context="{'flag_standard':flag_standard}">
								<tree string="Material of Construction Details Entry Tree" editable="top" >
									<field name="offer_id" attrs="{'readonly': [('flag_standard','=',False)]}"/>
									<field name="moc_id" attrs="{'readonly': [('flag_standard','=',False)]}"/>				   
									<field name="remarks" widget="char" attrs="{'readonly': [('flag_standard','=',False)]}"/>										
									<field name="flag_standard" invisible="1"/>										
								</tree>
							</field>								
						</page>
					</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
	<!-- Child Class Form View End -->
	
	<!-- Search View Start -->

		<record id="t_search_v_crm_enquiry" model="ir.ui.view">
            <field name="name">Enquiry Entry Search</field>
            <field name="model">kg.crm.enquiry</field>
            <field name="arch" type="xml">
                <search string="Enquiry Entry Search">
					<field name="name" string="Enquiry No"  filter_domain="[('name','ilike',self)]" />
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="moved_to_offer" string="Moved To Offer" domain="[('state','=','moved_to_offer')]"/>					
					<filter icon="terp-check" name="call" string="Call Back" domain="[('state','=','call')]"/>					
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="Customer" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'customer_id'}"/>
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->
	
	<!-- Menu Action Start-->
		
		<record id="tma_crm_enquiry" model="ir.actions.act_window">
			<field name="name">Enquiry</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.crm.enquiry</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_crm_enquiry"/>
			<field name="search_view_id" ref="t_search_v_crm_enquiry"/>
			<field name="context">{}</field>
		</record>
		
	<!-- Menu Action End-->
	
	<!-- Sequence Number Setting Starts Here -->
	
		<record forcecreate="1" id="seq_crm_service" model="ir.sequence.type">	
			<field name="name">CRM Enquiry</field>
			<field name="code">kg.crm.enquiry</field>
		</record>

		<record forcecreate="1" id="crm_service" model="ir.sequence">
		  <field name="name">CRM Enquiry</field>
		  <field name="code">kg.crm.enquiry</field>
		  <field name="padding" eval="3"/>
		  <field name="prefix">CRM/%(year)s/</field>
		  <field name="reset_sequence">fiscal_reset</field>
		</record>
		
		<record forcecreate="1" id="seq_crm_cp" model="ir.sequence.type">	
			<field name="name">CRM Enquiry CP</field>
			<field name="code">crm.enquiry.cp</field>
		</record>

		<record forcecreate="1" id="crm_cp" model="ir.sequence">
		  <field name="name">CRM Enquiry CP</field>
		  <field name="code">crm.enquiry.cp</field>
		  <field name="padding" eval="3"/>
		  <field name="prefix">CRM/CP/%(year)s/</field>
		  <field name="reset_sequence">fiscal_reset</field>
		</record>
		
		<record forcecreate="1" id="seq_crm_ip" model="ir.sequence.type">	
			<field name="name">CRM Enquiry IP</field>
			<field name="code">crm.enquiry.ip</field>
		</record>

		<record forcecreate="1" id="crm_ip" model="ir.sequence">
		  <field name="name">CRM Enquiry IP</field>
		  <field name="code">crm.enquiry.ip</field>
		  <field name="padding" eval="3"/>
		  <field name="prefix">CRM/IP/%(year)s/</field>
		  <field name="reset_sequence">fiscal_reset</field>
		</record>
		
	<!-- Sequence Number Setting Ends Here -->
	
	</data>
</openerp>
