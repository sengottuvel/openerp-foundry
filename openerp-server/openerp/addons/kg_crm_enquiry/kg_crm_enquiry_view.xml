<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

	<!-- Form View Start -->

		<record id="t_form_v_crm_enquiry" model="ir.ui.view">
			<field name="name">Enquiry Entry Form</field>
			<field name="model">kg.crm.enquiry</field>
			<field name="arch" type="xml">
				<form string="CRM Enquiry" version="7.0">
					<header>
						<button name="entry_confirm" type="object" string="Process Offer" states="draft" class="oe_highlight"/>
						<button name="entry_call_back" type="object" string="Call Back" states="draft" class="oe_highlight"/>
						<!--<field name="state" widget="statusbar" 
						statusbar_visible="draft,moved_to_offer,call,quote"
						statusbar_colors='{
                                        "draft":"blue",
                                        "moved_to_offer":"blue"
                                        }'/>-->
					</header>
					<sheet>		
						<group>
							<group>
								<field name="name" readonly="1"/>
								<field name="customer_id" required="1"/>
								<field name="industry_id"/>
								<field name="call_type"/>
								<field name="ref_mode"/>
								<field name="dealer_id" attrs="{'invisible': [('ref_mode','=','direct')],'required': [('ref_mode','=','dealer')]}"/>
								<field name="note"/>
								<field name="purpose" attrs="{'invisible': [('call_type','=','service')]}"/>
								<!--<field name="order_type" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>-->								
							</group>											
							<group>
								<field name="enquiry_date"/>
								<field name="due_date" on_change="onchange_due_date(due_date)"/>
								<field name="expected_del_date"/>
								<field name="expected_value"/>
								<field name="ref_no"/>
								<field name="segment"/>
								<field name="state" style="width: 30%%" class="att_state_change"/>
							</group>	
						</group>
						<group string="Boundry Parameters" attrs="{'invisible': [('purpose','not in',('pump'))]}">
							<group>
							<field name="capacity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="gravity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="spl_gravity" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							</group>
							<group>
							<field name="head" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							<field name="chemical_id" attrs="{'invisible': [('purpose','not in',('pump'))]}"/>
							</group>
						</group>
						<group string="WO Details" attrs="{'invisible': [('purpose','not in',('spare'))]}">
							<group>
							<field name="pump_id" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							<field name="s_no" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							</group>
							<group>
							<field name="wo_no" attrs="{'invisible': [('purpose','not in',('spare'))]}"/>
							</group>
						</group>
						<group string="Project Details" attrs="{'invisible': [('purpose','not in',('prj'))]}">
							<field name="requirements" attrs="{'invisible': [('purpose','not in',('prj'))],'required': [('purpose','in',('prj'))]}"/>
						</group>
						
						<group string="Pump Details">
							<field name="ch_line_ids" colspan="4" nolabel="1">
								<tree string="Pump History" editable="bottom">
								   <field name="pump_id" required="1"/>
								   <field name="qty" required="1"/>
								   <field name="del_date" required="1"/>
								   <field name="oth_spec" required="1"/>
								</tree>
							</field>
						</group>
							
						<button name="list_details" type="object" string="List" states="draft" class="oe_highlight"/>
						
						<group string="Old History">
							<notebook>
								<page string="Customer History">
									<notebook>
										<page string="Enquiry">
											<field name="line_ids" colspan="4" nolabel="1">
												<tree string="Enquiry Details" editable="bottom" delete="false" create="false">
												   <field name="enquiry_id"/>
												   <field name="purpose"/>
												   <field name="due_date"/>
												   <field name="state"/>
												   <field name="call_type"/>
												</tree>
											</field>
										</page>
									</notebook>
									<notebook>
										<page string="Offer"/>
									</notebook>
									<notebook>
										<page string="Work Order"/>
									</notebook>
									<notebook>
										<page string="Outstanding"/>
									</notebook>
									<notebook>
										<page string="Feedback"/>
									</notebook>
								</page>
								
								<page string="Entry Info">
									<group>
										<field name="company_id"/>
									</group>
									<group>
										<field name="active"/>
									</group>
									<group>
										<group>
											<field name="user_id"/>
											<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
											<field name="cancel_user_id" attrs="{'invisible':[('state','not in',['cancel'])]}"/>
											<field name="update_user_id"/>
										</group>
										<group>
											<field name="crt_date"/>
											<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
											<field name="cancel_date" attrs="{'invisible':[('state','not in',['cancel'])]}"/>
											<field name="update_date"/>
										</group>
									</group>
								</page>
							</notebook>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
	<!-- Form View End -->
		
	
	<!-- Tree View Start -->
		
		<record id="t_tree_v_crm_enquiry" model="ir.ui.view">
			<field name="name">CRM Enquiry Entry Tree</field>
			<field name="model">kg.crm.enquiry</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';black:state == 'moved_to_offer';gray:state == 'call'" 
								toolbar="True" string="Enquiry Entry Tree">					
					<field name="name"/>
					<field name="enquiry_date"/>
					<field name="customer_id"/>
					<field name="purpose"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
	<!-- Tree View End -->
	
	<!-- Search View Start -->

		<record id="t_search_v_crm_enquiry" model="ir.ui.view">
            <field name="name">Enquiry Entry Search</field>
            <field name="model">kg.crm.enquiry</field>
            <field name="arch" type="xml">
                <search string="Enquiry Entry Search">
					<field name="name" string="Enquiry No"  filter_domain="[('name','ilike',self)]" />
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="moved_to_offer" string="Moved To Offer" domain="[('state','=','moved_to_offer')]"/>					
					<filter icon="terp-check" name="call" string="Call Back" domain="[('state','=','call')]"/>					
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="Customer" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'customer_id'}"/>
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->
	
	<!-- Menu Action Start-->
		
		<record id="tma_crm_enquiry" model="ir.actions.act_window">
			<field name="name">Enquiry</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.crm.enquiry</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_crm_enquiry"/>
			<field name="search_view_id" ref="t_search_v_crm_enquiry"/>
			<field name="context">{}</field>
		</record>
		
	<!-- Menu Action End-->
	
	
	
	
	
	</data>
</openerp>
