	<!-- Search View Start -->

		<record id="t_search_v_assembly_inward" model="ir.ui.view">
            <field name="name">Assembly Inward Entry Search</field>
            <field name="model">kg.assembly.inward</field>
            <field name="arch" type="xml">
                <search string="Assembly Inward Entry Search">
					<field name="order_id" string="WO No."  filter_domain="[('order_id','ilike',self)]" />
					<field name="pump_model_id" string="Pump Model"  filter_domain="[('pump_model_id','ilike',self)]" />
					<field name="moc_construction_id" string="MOC Construction Code"  filter_domain="[('moc_construction_id','ilike',self)]" />
					<filter icon="terp-check" name="waiting" string="Waiting for Accept" domain="[('state','=','waiting')]"/>
					<filter icon="terp-check" name="in_progress" string="Assembly In Progress" domain="[('state','=','in_progress')]"/>					
					<filter icon="terp-check" name="re_process" string="Assembly Re Process" domain="[('state','=','re_process')]"/>					
					<filter icon="terp-check" name="completed" string="Assembly Completed" domain="[('state','=','completed')]"/>					
					<filter icon="terp-check" name="rejected" string="Assembly Rejected" domain="[('state','=','rejected')]"/>					
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="WO No." icon="terp-gtk-select-all" domain="[]" context="{'group_by':'order_id'}"/>
						<filter string="Order Category" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'order_category'}"/>
						<filter string="Pump Model" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'pump_model_id'}"/>
						<filter string="MOC Construction Code" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'moc_construction_id'}"/>
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->
	
	<!-- Menu Action Start for Work Order -->
		
		<record id="tma_assembly_inward" model="ir.actions.act_window">
			<field name="name">Assembly Inward</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.assembly.inward</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="t_tree_v_assembly_inward"/>
			<field name="search_view_id" ref="t_search_v_assembly_inward"/>
