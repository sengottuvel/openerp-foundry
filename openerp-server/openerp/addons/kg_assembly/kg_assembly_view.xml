		<field name="name">KG Assembly Inward</field>
		<field name="code">kg.assembly.inward</field>
	</record>

	<record forcecreate="1" id="seq_assembly_inward" model="ir.sequence">
	  <field name="name">KG Assembly Inward</field>
	  <field name="code">kg.assembly.inward</field>
	  <field name="padding" eval="3"/>
	  <field name="prefix">Inward/%(year)s/%(month)s/</field>
	  <field name="reset_sequence">fiscal_reset</field>
	</record>
	
	<!-- Sequence Number Setting Ends Here -->
	
	<!-- Manual Assembly Inward -->
	
	<record id="wf_manual_assembly_inward" model="ir.ui.view">
		<field name="name">kg.manual.assembly.inward.form</field>
		<field name="model">kg.manual.assembly.inward</field>
		<field name="type">form</field>
