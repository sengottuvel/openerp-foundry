<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	

	<!-- Form View Start -->
	
		<record id="m_form_v_pumpseries" model="ir.ui.view">
			<field name="name">Pumpseries Master Form</field>
			<field name="model">kg.pumpseries.master</field>
			<field name="arch" type="xml">
				<form string="Pumpseries Master" version="7.0">					
					<header>
						<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_cancel" type="object" states="reject,approved" string="Cancel" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>	
						<button name="entry_draft" type="object" states="cancel" string="Set To Draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>	
						<button name="send_to_dms" type="object" string="DMS" class="oe_highlight"/>
					</header>
					<sheet>
						<group>
							<group>						
								<field name="name" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>				
								<field name="fluid_id" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>								
							</group>
							<group>
								<field name="code" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="active"/>
								<field name="state" style="width: 30%%" class="att_state_change"/>								
							</group>
						</group>
						<group string="Boundary Parameter">
							<group>
								<field name="discharge_orientation" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>								
								<field name="pump_capacity" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>								
								<field name="temperature" string="Temperature(â„ƒ )" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>								
								<field name="notes" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>		
							</group>
							<group string=" ">
								<field name="suction_orientation" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="pump_head" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="speed" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="working_pressure" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
						</group>						
						<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
							<group>	
								<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
							<group>												
								<field name="cancel_remark" attrs="{'invisible':[('state','in',['draft','confirmed'])], 'readonly': [('state','in',['cancel'])]}"/>	
							</group>
						</group>
						
						
						<notebook>
							<page string="Flange Details">
								<field name="line_ids" colspan="4" nolabel="1">
									<tree string="Flange History" editable="1">
										<field name="flange_id" required="1" on_change="onchange_flange(flange_id,name)"/>
										<field name="flange_type" required="1"/>
										<field name="name" invisible="1"/>
									</tree>
									<form string="Flange History">
										<group>
											<group>
												<field name="flange_id" required="1" on_change="onchange_flange(flange_id,name)"/>
											</group>
											<group>
												<field name="flange_type" required="1"/>
												<field name="name" invisible="1"/>
											</group>
										</group>
									</form>
								</field>
							</page>
							<page string="Entry Info">
									<group>
										<field name="company_id"/>
									</group>
									<group>
									<group>
										<field name="user_id"/>
										<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_user_id"/>
									</group>
									<group>
										<field name="crt_date"/>
										<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_date" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_date"/>
									</group>
								</group>
							</page>
						</notebook>															
					</sheet>
				</form>
			</field> 
		</record>
		
		<!-- Form View End -->

		<!-- Tree View Start -->
		
		<record id="m_tree_v_pumpseries" model="ir.ui.view">
			<field name="name">Pumpseries Master Tree</field>
			<field name="model">kg.pumpseries.master</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved';gray:state == 'reject';gray:state == 'cancel'" 
								toolbar="True" string="Pumpseries Master Tree">				
					<field name="code"/>
					<field name="name"/>
					<button name="send_to_dms" type="object" string="DMS" icon="terp-folder-blue"/>					
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<!-- Tree View End -->

		<!-- Search View Start -->

		<record id="m_search_v_pumpseries" model="ir.ui.view">
            <field name="name">Pumpseries Master Search</field>
            <field name="model">kg.pumpseries.master</field>
            <field name="arch" type="xml">
                <search string="Pumpseries Master Template">
					<field name="name" string="Name"  filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]" />
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>				
					<filter icon="terp-check" name="approve" string="Approved" domain="[('state','=','approved')]"/>				
					<filter icon="terp-check" name="reject" string="Rejected" domain="[('state','=','reject')]"/>				
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Name" icon="terp-personal" domain="[]" context="{'group_by':'name'}"/> 
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
		<!-- Search View End -->

		<!-- Menu Action Start-->
		
		 <record id="mma_pumpseries_master" model="ir.actions.act_window">
			<field name="name">Pumpseries Master</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.pumpseries.master</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="m_tree_v_pumpseries"/>
			<field name="search_view_id" ref="m_search_v_pumpseries"/>
		</record>	
		
		<!-- Menu Action End-->
		
		
		 <!-- Audit Log Xml Data Start
		
        <record id="pumpseries_model" model="audittrail.rule">
            <field name="name">Audit Log Pumpseries Composition Master</field>
            <field name="object_id" eval="ref('kg_pumpseries_master.model_kg_pumpseries_master')"/>       
            <field name="state">subscribed</field>              
        </record> -->
        
        <!-- Audit Log Xml Data End-->
		

	</data>
</openerp>
