<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!-- Form View Start -->
        <record id="r_form_v_esi_excel_rep" model="ir.ui.view">
            <field name="name">ESI</field>
            <field name="model">kg.excel.esi.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
			<form string="ESI Report" version="7.0">             			 
				<header>
					<button name="produce_xls" states="draft" string="Generate" type="object" class="oe_highlight"/>
				</header>
				<group>
					<group>
						 <field name="month" attrs="{'readonly': [('state','in',['done'])]}" required='1'/>
					 </group>
					 <group>
						 <field name="year" readonly='1'/>
						 <field name="state" style="width: 30%%" class="att_state_change" invisible="1"/>
						 <field name="rep_data" nolabel="1" readonly="1" width="100" filename="name"/>
					 </group>
				</group>
			</form>
            </field>
        </record>
        
        <!-- Form View End -->
        
        <!-- Tree View Start -->
        
        <record id="r_tree_v_esi_excel_rep" model="ir.ui.view">
            <field name="name">ESI</field>
            <field name="model">kg.excel.esi.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
             <tree string="ESI Report">
				 <field name="creation_date"/>
				 <field name="month"/>
				 <field name="year"/>
				 <field name="rep_data"/>
				 <field name="state" invisible="1"/>				 
			</tree>
            </field>
        </record>
        
         <!-- Tree View End -->
        
        <!-- Menu Action Start -->

        <record id="ram_esi_excel_rep" model="ir.actions.act_window">
			<field name="name">ESI</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.excel.esi.report</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="r_tree_v_esi_excel_rep"/>
		</record>
		
		<!-- Menu Action End -->
        
    </data>
</openerp>

