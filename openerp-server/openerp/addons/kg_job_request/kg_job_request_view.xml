        <!-- Audit Log Xml Data End-->
		
		<!-- Menu Name Start here --> 
		
				<menuitem parent="base.menu_crm_case_job_req_main" id="mcm_kg_job_request" action="hr.action_hr_job" sequence="0" name="Job Request"/>

		<!-- Menu Name End here --> 

	</data>
</openerp>
