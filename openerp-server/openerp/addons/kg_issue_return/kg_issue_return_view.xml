            action="action_kg_issuereturn_form"
            id="menu_mrp_issuereturn_menu"
            parent="menu_mrp_bom_form_action1"
            sequence="1"/>-->

<!--	<menuitem id="menu_mrp_issuereturn_menu_id" name="Issue Return" parent="stock.menu_stock_warehouse_mgmt" sequence="2" action="action_kg_issuereturn_form" />-->

        
	
    </data>
</openerp>
