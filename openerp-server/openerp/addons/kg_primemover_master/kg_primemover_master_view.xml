<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	

	<!-- Form View Start -->
	
		<record id="m_form_v_primemover" model="ir.ui.view">
			<field name="name">Primemover Master Form</field>
			<field name="model">kg.primemover.master</field>
			<field name="arch" type="xml">
				<form string="Primemover Master" version="7.0">
					<header>
						<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_cancel" type="object" states="reject,approved" string="Cancel" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<button name="entry_draft" type="object" states="cancel" string="Set To Draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					</header>
					<sheet>
						<group>
							<group>
								<field name="name" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="primemover_categ" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="frequency" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="pole" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="framesize" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="mounting" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="efficiency" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="power_hp" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="specification" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="price" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="shaft_dia" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="temprise_class" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="notes" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="radiator_mtg" invisible="1"/>
							</group>
							<group>
								<field name="manufacturer" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="effclass" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="series" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="terminal_box_loc" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="power_kw" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="speed" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="article_no" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="ambient_temp" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="gd2" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="space_heater" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="characteristics" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="noise_level" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="weight" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="active"/>
								<field name="state" style="width: 30%%" class="att_state_change"/>
								<field name="moc_id" invisible="1"/>
							</group>
						</group>						
						<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
							<group>	
								<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
							<group>												
								<field name="cancel_remark" attrs="{'invisible':[('state','in',['draft','confirmed'])], 'readonly': [('state','in',['cancel'])]}"/>	
							</group>
						</group>
						<notebook>
							<page string="Entry Info">
									<group>
										<field name="company_id"/>
									</group>
									<group>
									<group>
										<field name="user_id"/>
										<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_user_id"/>
									</group>
									<group>
										<field name="crt_date"/>
										<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_date" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_date"/>
									</group>
								</group>
							</page>
						</notebook>															
					</sheet>
				</form>
			</field> 
		</record>
		
		<!-- Form View End -->

		<!-- Tree View Start -->
		
		<record id="m_tree_v_primemover" model="ir.ui.view">
			<field name="name">Primemover Master Tree</field>
			<field name="model">kg.primemover.master</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved';gray:state == 'reject';gray:state == 'cancel'" 
								toolbar="True" string="Primemover Master Tree">				
					<field name="name"/>
					<field name="manufacturer"/>
					<field name="moc_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<!-- Tree View End -->

		<!-- Search View Start -->

		<record id="m_search_v_primemover" model="ir.ui.view">
            <field name="name">Primemover Master Search</field>
            <field name="model">kg.primemover.master</field>
            <field name="arch" type="xml">
                <search string="Primemover Master Template">
					<field name="name" string="Name"  filter_domain="[('name','ilike',self)]" />
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>				
					<filter icon="terp-check" name="approve" string="Approved" domain="[('state','=','approved')]"/>				
					<filter icon="terp-check" name="reject" string="Rejected" domain="[('state','=','reject')]"/>				
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Name" icon="terp-personal" domain="[]" context="{'group_by':'name'}"/> 
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
		<!-- Search View End -->

		<!-- Menu Action Start-->
		
		 <record id="mma_primemover_master" model="ir.actions.act_window">
			<field name="name">Primemover Master</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.primemover.master</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="m_tree_v_primemover"/>
			<field name="search_view_id" ref="m_search_v_primemover"/>
		</record>	
		
		<!-- Menu Action End-->
		
		
		 <!-- Audit Log Xml Data Start
		
        <record id="primemover_model" model="audittrail.rule">
            <field name="name">Audit Log Primemover Composition Master</field>
            <field name="object_id" eval="ref('kg_primemover_master.model_kg_primemover_master')"/>       
            <field name="state">subscribed</field>              
        </record> -->
        
        <!-- Audit Log Xml Data End-->
		

	</data>
</openerp>
