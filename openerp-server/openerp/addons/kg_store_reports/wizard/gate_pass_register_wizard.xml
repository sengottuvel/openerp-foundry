<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_gate_pass_register_report" model="ir.ui.view">
            <field name="name">Gate Pass Register</field>
            <field name="model">gate.pass.register.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
             <form string="Gate Pass Register">
                <separator string="Gate Pass Register" colspan="4"/>
                   
                    <notebook tabpos="up" colspan="4">
						<page string="Filters" name="filters">
						  <group>
							<group string="Gate Pass Date">
								<field name="date_from" required="1"/>
								<field name="date_to" required="1"/>
							</group>
							<group string="Status">
								<field name="status"/>
							</group>
						   </group>
						</page>
                        
                        <page string="Department" name="dep_id">
                            <group colspan="2" col="2">
								<separator string="Department Name" colspan="2" col="2" />
								<field name = "dep_id"/>
							</group>
                        </page>
                        
                        <page string="Product" name="product">
                            <group colspan="2" col="2">
								<separator string="Product" colspan="2" col="2" />
								<field name = "product"/>
							</group>
                        </page>
                        <!--<page string="Product Type" name="product_type">
                            <group colspan="2" col="2">
								<separator string="Product Type" colspan="2" col="2" />
								<field name = "product_type"/>
							</group>
                        </page>-->

                                                                         
                    </notebook>                
                    <separator colspan="4"/>
						<group col="4" colspan="4">
							<button icon="gtk-print" name="check_report" string="Generate" type="object" colspan="2" default_focus="1" />
							<button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
						</group>
                </form>
            </field>
        </record>

        <record id="action_gate_pass_report" model="ir.actions.act_window">  
            <field name="name">Gate Pass Register</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">gate.pass.register.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
           
	
    </data>
</openerp>
