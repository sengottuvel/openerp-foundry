<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	

	<!-- Form View Start -->
	
		<record id="m_form_v_kg_daily_att" model="ir.ui.view">
			<field name="name">Daily Attendance Form</field>
			<field name="model">kg.daily.attendance</field>
			<field name="arch" type="xml">
				<form string="Daily Attendance" version="7.0">				
					<header>
						<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','no')]}" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<button name="entry_draft" type="object" states="cancel" string="Set To Draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="monthly_attendance" type="object" states="approved" string="Calculate" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					</header>
						<group>
							<group>						
								<field name="date" required="1" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>
								<field name="modify" invisible = "1"/>
								<field name="copy_att" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}" invisible="1"/>
								<field name="att_status" />
								<field name="total_hours" readonly="1"/>
							</group>
							<group>
								
								<field name="in_time" widget="float_time" />								
								<field name="out_time"  widget="float_time" on_change = "onchange_hrs(in_time,out_time)"  />
								<field name="state" style="width: 30%%" class="att_state_change"/>
								<field name="flag_load" invisible="1"/>
							</group>
						</group>						
						<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
							<group>	
								<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
							<group>												
								<field name="cancel_remark" attrs="{'invisible':[('state','in',['draft','confirmed'])], 'readonly': [('state','in',['cancel'])]}"/>		
							</group>
						</group>
						<button name="load_employees" string="Load Employees" type="object" class="oe_highlight"/>
						<field name="line_id" nolabel="1" colspan="4" attrs="{'invisible':[('flag_load','=',False)]}">
							<tree string="Daliy Attendance Line" editable="bottom" delete="false">
								<field name="employee_id" required="1" readonly="1"/>
								<field name="code" readonly="1"/>
								<field name="department_id" readonly="1"/>
								<field name="status" required="1"/>
								<field name="in_time" required="1"/>
								<field name="out_time" required="1" on_change = "onchange_hrsss(in_time,out_time)" />
								<field name="total_hours" required="1" readonly="1"/>
							</tree>
						</field>
						<notebook>
							<page string="Notes">
								<field name="notes" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}" placeholder="Add notes for your reference"/>				
							</page>
							<page string="Entry Info">
								<group>
									<group>
										<field name="company_id"/>
									</group>
									<group>
										<field name="active"/>
									</group>
								</group>
								<group>
									<group>
										<field name="user_id"/>
										<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_user_id"/>
									</group>
									<group>
										<field name="crt_date"/>
										<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_date" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_date"/>
										
									</group>
								</group>
							</page>
						</notebook>															
				</form>
			</field> 
		</record>
		
		<!-- Form View End -->

		<!-- Tree View Start -->
		
		<record id="m_tree_v_kg_daily_att" model="ir.ui.view">
			<field name="name">Daily Attendance Tree</field>
			<field name="model">kg.daily.attendance</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved';gray:state == 'reject';gray:state == 'cancel'" 
								toolbar="True" string="Daily Attendance">				
					<field name="date" />
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<!-- Tree View End -->

		<!-- Search View Start -->

		<record id="m_search_v_kg_daily_att" model="ir.ui.view">
            <field name="name">Daily Attendance Search</field>
            <field name="model">kg.daily.attendance</field>
            <field name="arch" type="xml">
                <search string="Daily Attendance">
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>				
					<filter icon="terp-check" name="approve" string="Approved" domain="[('state','=','approved')]"/>				
					<filter icon="terp-check" name="reject" string="Rejected" domain="[('state','=','reject')]"/>				
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
		<!-- Search View End -->

		<!-- Menu Action Start-->
		
		 <record id="mma_standard_kg_daily_att" model="ir.actions.act_window">
			<field name="name">Daily Attendance</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.daily.attendance</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="m_tree_v_kg_daily_att"/>
			<field name="search_view_id" ref="m_search_v_kg_daily_att"/>
		</record>			
		
		<!-- Menu Action End-->
		
		 <!-- Audit Log Xml Data Start -->
		
        <record id="division_model" model="audittrail.rule">
            <field name="name">Audit Log Master</field>
            <field name="object_id" eval="ref('kg_daily_attendance.model_kg_daily_attendance')"/>       
            <field name="state">subscribed</field>              
        </record>
        
        <!-- Audit Log Xml Data End-->
		
		<!-- Menu Name Start here --> 
		
			<menuitem action="mma_standard_kg_daily_att" name="Daily Attendance" id="mam_kg_daily_att" parent="kg_monthly_attendance.mpm_kg_mon_att" sequence="0"/>

		<!-- Menu Name End here --> 

	</data>
</openerp>
