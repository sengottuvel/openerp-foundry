							<field name="reject_remark" attrs="{'invisible':[('state','not in',['approve','reject'])], 'readonly': [('state','in',['cancel','reject'])]}"/>
						</group>
						<group>
						</group>
					</group>
					<notebook>
					<page string="Products" attrs="{'invisible': [('products_flag','=',False)]}" >
