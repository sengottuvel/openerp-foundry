				</tree>
			</field>
		</record>
		
		<!-- Tree View End -->
	
	
			
			
		
		<!-- Menu Invoice Action Start -->
		
		
		<record id="tma_painting_invoice" model="ir.actions.act_window">
			<field name="name">Painting Invoice</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.painting.invoice</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="domain">[('state','!=','approved'),('flag_spl_approve','!=','t')]</field>
			<field name="search_view_id" ref="t_search_v_painting_invoice"/>
			<field name="context">{"search_default_draft":1}</field>               
            <field name="help" type="html"> 
            </field>
		</record>
		
		<record model="ir.actions.act_window.view" id="tma_painting_invoice_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="t_tree_v_painting_invoice"/>
            <field name="act_window_id" ref="tma_painting_invoice"/>
        </record>
        <record model="ir.actions.act_window.view" id="tma_painting_invoice_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_painting_invoice"/>
            <field name="act_window_id" ref="tma_painting_invoice"/>
        </record>
        
        
