            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_painting_invoice_ack"/>
            <field name="act_window_id" ref="tma_painting_invoice_ack"/>
        </record>
		
		<!-- Invoice and ACK Menu End Here -->
		
		 
		
		<!-- Menu Action End-->
		
		<menuitem action="tma_painting_invoice" id="tam_painting_invoice" parent="kg_part_qap.tpm_qap" sequence="9"/>
		<menuitem action="tma_sp_painting_invoice" id="tam_sp_painting_invoice" parent="kg_part_qap.tpm_qap" sequence="10"/>
		
