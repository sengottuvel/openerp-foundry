		<!-- Form View End -->
			
		
		<!-- Tree View Start -->
		
		<record id="t_tree_v_painting_invoice_ack" model="ir.ui.view">
			<field name="name">Painting Invoice Tree</field>
			<field name="model">kg.painting.invoice</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed';black:state == 'done';blue:state == 'approved';gray:state == 'cancel'" 
					toolbar="True" string="Painting Invoice Tree" create="false">							
				<field name="name"/>
