<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	

	<!-- Form View Start -->
	
		<record id="m_form_v_contractor_category" model="ir.ui.view">
			<field name="name">Contractor Category Master Form</field>
			<field name="model">kg.contractor.category</field>
			<field name="arch" type="xml">
				<form string="Contractor Category Master" version="7.0">					
					<header>
						<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','no')]}" class="oe_highlight" confirm="Are you sure to proceed ?" invisible="1"/>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<button name="entry_draft" type="object" states="approved" string="Set To Draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					</header>
					<sheet>
						<group>
							<group>						
								<field name="name" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>									
								<field name="modify" invisible = "1"/>		
								<field name="notes" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>				
							</group>
							<group>
								<field name="shift_id" attrs="{'readonly': [('state','in',['approved','reject','cancel'])]}"/>											
								<field name="state" style="width: 30%%" class="att_state_change"/>								
							</group>
						</group>						
						<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
							<group>	
								<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
							</group>
							<group>												
								<field name="cancel_remark" attrs="{'invisible':[('state','in',['draft','confirmed'])], 'readonly': [('state','in',['cancel'])]}"/>		
							</group>
						</group>
						<notebook>
							<page string="Entry Info">
									<group>
										<field name="company_id"/>
										<field name="active"/>	
									</group>
									<group>
									<group>
										<field name="user_id"/>
										<field name="confirm_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_user_id"/>
									</group>
									<group>
										<field name="crt_date"/>
										<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
										<field name="ap_rej_date" attrs="{'invisible':[('state','in',['draft', 'confirmed'])]}"/>
										<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
										<field name="update_date"/>
									</group>
								</group>
							</page>
						</notebook>															
					</sheet>
				</form>
			</field> 
		</record>
		
		<!-- Form View End -->

		<!-- Tree View Start -->
		
		<record id="m_tree_v_contractor_category" model="ir.ui.view">
			<field name="name">Contractor Category Master Tree</field>
			<field name="model">kg.contractor.category</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved';gray:state == 'reject';gray:state == 'cancel'" 
								toolbar="True" string="Contractor Category Master Tree">				
					
					<field name="name"/>
					<field name="shift_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<!-- Tree View End -->

		<!-- Search View Start -->

		<record id="m_search_v_contractor_category" model="ir.ui.view">
            <field name="name">Contractor Category Master Search</field>
            <field name="model">kg.contractor.category</field>
            <field name="arch" type="xml">
                <search string="Contractor Category Master Template">
					<field name="name" string="Master"  filter_domain="[('name','ilike',self)]" />
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>				
					<filter icon="terp-check" name="approve" string="Approved" domain="[('state','=','approved')]"/>				
					<filter icon="terp-check" name="reject" string="Rejected" domain="[('state','=','reject')]"/>				
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Name" icon="terp-personal" domain="[]" context="{'group_by':'name'}"/> 
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>
		
		<!-- Search View End -->

		<!-- Menu Action Start-->
		
		 <record id="mma_contractor_category_master" model="ir.actions.act_window">
			<field name="name">Contractor Category</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.contractor.category</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="m_tree_v_contractor_category"/>
			<field name="search_view_id" ref="m_search_v_contractor_category"/>
		</record>	
		
		
		<!-- Menu Action End-->
		
		 <!-- Audit Log Xml Data Start -->
		
        <record id="contractor_category_model" model="audittrail.rule">
            <field name="name">Audit Log Contractor Category Master</field>
            <field name="object_id" eval="ref('kg_contractor_category.model_kg_contractor_category')"/>       
            <field name="state">subscribed</field>              
        </record>
        
        <!-- Audit Log Xml Data End-->
		
		<!-- Menu Name Start here --> 
		
			<menuitem action="mma_contractor_category_master" name="Contractor Category" id="mam_contractor_category_master" parent="kg_pumpmodel_master.mpm_planning_master" sequence="18"/>

		<!-- Menu Name End here --> 

	</data>
</openerp>
