<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	

	<!-- Form View -->
	
		<record id="kg_project_master_form_view" model="ir.ui.view">
			<field name="name">Project Master Form</field>
			<field name="model">kg.project.master</field>
			<field name="arch" type="xml">
				<form string="Project Master" version="7.0">
					<header>
						<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight" confirm="Are you sure to proceed ?" />
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<!--<button name="entry_cancel" type="object" string="Cancel" attrs="{'invisible':[('modify','=','yes'),('state','in',('approved','cancel'))]}" class="oe_highlight" confirm="Are you sure to proceed ?"/>-->
						<button name="entry_cancel" type="object" states="approved,reject" string="Cancel" class="oe_highlight" confirm="Are you sure to proceed ?"/>
						<button name="entry_draft" type="object" states="cancel" string="Set To Draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					</header>
					<group>
						<group>						
							<field name="name"/>
							<field name="code"/>
							<field name="modify" invisible="1"/>
						</group>
						<group>
							<field name="active"/>
							<field name="state" style="width: 30%%" class="att_state_change"/>
						</group>
					</group>
					<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
						<group>	
							<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject','cancel'])]}"/>
						</group>
						<group>												
							<field name="cancel_remark" attrs="{'invisible':[('state','in',['draft','reject','confirmed'])], 'readonly': [('state','in',['cancel'])]}"/>												
						</group>
					</group>
				<notebook>
				<page string="Entry Info">
					<group>
						<field name="company_id"/>
					</group>
					<group>
					<group>
						<field name="user_id"/>
						<field name="conf_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
						<field name="app_user_id" attrs="{'invisible':[('state','in',['draft','reject','confirmed'])]}"/>
						<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
						<field name="rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','approved','cancel'])]}"/>
						<field name="update_user_id"/>
					</group>
					<group>
						<field name="date"/>
						<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
						<field name="approve_date" attrs="{'invisible':[('state','in',['draft','reject','confirmed'])]}"/>
						<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject','approved'])]}"/>
						<field name="reject_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','approved','cancel'])]}"/>
						<field name="update_date"/>
					</group>
					</group>
				</page>
				</notebook>
				</form>
			</field> 
		</record>

		<!-- Tree View -->
		
		<record id="kg_project_master_tree_view" model="ir.ui.view">
			<field name="name">Project Master Tree</field>
			<field name="model">kg.project.master</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved';gray:state == 'reject';gray:state == 'cancel'" 
								toolbar="True" string="Project Master Tree">					
					<field name="name"/>
					<field name="code"/>
					<field name="state"/>
					<field name="date" invisible="1"/>
					<field name="user_id" invisible="1"/>
					<field name="modify" invisible="1"/>
				</tree>
			</field>
		</record>

		<!-- Search View -->

		<record id="kg_project_master_search_view" model="ir.ui.view">
            <field name="name">Project Master</field>
            <field name="model">kg.project.master</field>
            <field name="arch" type="xml">
                <search string="Project Master Template">
					<field name="name" string="Project Name" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/> 
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>				
					<filter icon="terp-check" name="approve" string="Approved" domain="[('state','=','approved')]"/>				
					<filter icon="terp-check" name="reject" string="Rejected" domain="[('state','=','reject')]"/>			
					<separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Project Name" icon="terp-personal" domain="[]" context="{'group_by':'name'}"/>
                        <filter string="Date" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'date'}"/>
                        <filter string="Created By" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
					</group>
                </search>
			</field>
		</record>

		<!-- Menu Action -->
		
		 <record id="kg_project_master_menu_action" model="ir.actions.act_window">
			<field name="name">Project Master Template</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.project.master</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="kg_project_master_tree_view"/>
			<field name="search_view_id" ref="kg_project_master_search_view"/>
		</record>
		
		<!-- Audit Log Xml Data Start-->
		
        <record id="project_master_model" model="audittrail.rule">
            <field name="name">Audit Log Project Master</field>
            <field name="object_id" eval="ref('kg_project_master.model_kg_project_master')"/>       
            <field name="state">subscribed</field>              
        </record>
        
		<!-- Audit Log Xml Data End-->
		

	</data>
</openerp>
