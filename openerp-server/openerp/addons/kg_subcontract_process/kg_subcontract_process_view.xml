<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	
	<!-- MS Schedule List Starts Here -->
	
	<!-- Form View Start -->

		<record id="t_form_v_sc_list" model="ir.ui.view">
			<field name="name">Subcontract List Form</field>
			<field name="model">kg.subcontract.process</field>
			<field name="arch" type="xml">
				<form string="Subcontract List" version="7.0" create="false">						
					<group string="SC Details">
						<group>
							<field name="name"/>
							<field name="actual_qty" readonly="1"/>
						</group>											
						<group>
							<field name="entry_date" readonly="1"/>
							<field name="wo_state" invisible="1"/>
						</group>					
					</group>
					<group string="Work Order Details">
						<group>
							<field name="order_no" readonly="1"/>
							<field name="order_priority" string="Category" readonly="1"/>
							<field name="pattern_id" invisible="1"/>
							<field name="item_code" readonly="1" />
							<field name="moc_id" readonly="1"/>
						</group>											
						<group>
							<field name="order_delivery_date"/>
							<field name="pump_model_id" readonly="1"/>
							<field name="pattern_name" invisible="1"/>
							<field name="item_name" readonly="1"/>
							<field name="oth_spec" widget="char"/>
						</group>					
					</group>
					<notebook>
						
						<page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>
							<group>
								<group>
									<field name="user_id"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="update_date"/>
								</group>
							</group>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
	<!-- Form View End -->
		
	
	<!-- Tree View Start -->
		
		<record id="t_tree_v_sc_list" model="ir.ui.view">
			<field name="name">Subcontract List Tree</field>
			<field name="model">kg.subcontract.process</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Subcontract List Tree" create="false">					
					<field name="name" invisible="1"/>
					<field name="order_no"/>
					<field name="contractor_id"/>
					<field name="order_delivery_date"/>
					<field name="order_category" invisible="1"/>
					<field name="order_priority" string="Category"/>
					<field name="pump_model_id"/>
					<field name="pattern_id" invisible="1"/>
					<field name="pattern_name" invisible="1"/>
					<field name="item_code" />
					<field name="item_name"/>
					<field name="moc_id"/>
					<field name="position_id"/>
					<field name="location" invisible="1"/>
					<field name="actual_qty" sum="Total SC Qty"/>
					<field name="pending_qty" sum="Total SC Qty"/>
					<field name="total_qty" sum="Total WO Qty"/>
					<field name="oth_spec" widget="char"/>
				</tree>
			</field>
		</record>
		
	<!-- Tree View End -->
	
	<!-- Search View Start -->

		<record id="t_search_v_sc_list" model="ir.ui.view">
            <field name="name">Subcontract List Search</field>
            <field name="model">kg.subcontract.process</field>
            <field name="arch" type="xml">
                <search string="Subcontract List Search">
					
					<field name="item_code" string="Item Code"  filter_domain="[('item_code','ilike',self)]" />
					<field name="item_name" string="Item Name"  filter_domain="[('item_name','ilike',self)]" />
					<field name="pump_model_id" string="Pump Model"  filter_domain="[('pump_model_id','ilike',self)]" />
					<field name="order_no" string="Work Order No."  filter_domain="[('order_no','ilike',self)]" />
					<field name="moc_id" string="MOC"  filter_domain="[('moc_id','ilike',self)]" />
							
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="WO No." icon="terp-gtk-select-all" domain="[]" context="{'group_by':'order_no'}"/>
						<filter string="Delivery Date" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'order_delivery_date'}"/>
						<filter string="Category" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'order_category'}"/>
						<filter string="Pump Model" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'pump_model_id'}"/>
						<filter string="Item Code" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'item_code'}"/>
						<filter string="Item Name" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'item_name'}"/>
						<filter string="MOC" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'moc_id'}"/>
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->		
			
		
		<!-- Menu Action Start -->
		
		
		<record id="tma_sc_list" model="ir.actions.act_window">
			<field name="name">Subcontract List</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.subcontract.process</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="t_search_v_sc_list"/>
			<field name="domain">[('wo_process_state','=','allow')]</field>
		</record>
		
		 <record model="ir.actions.act_window.view" id="tma_sc_list_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="t_tree_v_sc_list"/>
            <field name="act_window_id" ref="tma_sc_list"/>
        </record>
        <record model="ir.actions.act_window.view" id="tma_sc_list_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_sc_list"/>
            <field name="act_window_id" ref="tma_sc_list"/>
        </record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_sc_process" model="audittrail.rule">
            <field name="name">Audit Subcontract</field>
            <field name="object_id" eval="ref('kg_subcontract_process.model_kg_subcontract_process')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    <!-- Audit Log Xml Data End-->
    
    <!-- Sequence Number Setting Starts Here -->
	
	<record forcecreate="1" id="seq_type_subcontract" model="ir.sequence.type">	
		<field name="name">KG Subcontract Process</field>
		<field name="code">kg.subcontract.process</field>
	</record>

	<record forcecreate="1" id="seq_subcontract" model="ir.sequence">
	  <field name="name">KG Subcontract Process</field>
	  <field name="code">kg.subcontract.process</field>
	  <field name="padding" eval="3"/>
	  <field name="prefix">SC/%(year)s/%(month)s/</field>
	  <field name="reset_sequence">fiscal_reset</field>
	</record>
	
	<!-- Sequence Number Setting Ends Here -->
	
	<!-- Subcontractor List End Here -->
	
	<!-- Subcontractor WO Starts Here -->
	
	<!-- Form View Start -->

		<record id="t_form_v_sc_wo" model="ir.ui.view">
			<field name="name">Subcontract WO Form</field>
			<field name="model">kg.subcontract.wo</field>
			<field name="arch" type="xml">
				<form string="Subcontract WO" version="7.0">
					<header>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
						<button name="entry_approve" type="object" string="Approve" states="confirmed" class="oe_highlight"/>
						<button name="approve_dc" type="object" string="Approve &amp; DC" states="confirmed" class="oe_highlight"/>
					</header>
					<group>
						<group>
							<field name="name"/>
							<field name="contractor_id" on_change="onchange_contractor(contractor_id)" required="1"  attrs="{'readonly': [('state','not in',['draft'])]}"/>
							<field name="phone" readonly="1"/>
							<field name="wo_value" readonly="1"/>								
						</group>											
						<group>
							<field name="entry_date" attrs="{'readonly': [('state','not in',['draft'])]}"/>
							<field name="contact_person" readonly="1"/>
							<field name="billing_type" invisible="1"/>
							<field name="delivery_date" options="{'datepicker':{'maxDate': 185}}" required="1" attrs="{'readonly': [('state','not in',['draft'])]}"/>
							<field name="flag_order" invisible="1"/>
							<field name="flag_spl_app" invisible="1"/>
							<field name="flag_app" invisible="1"/>
							<field name="state" readonly="1" style="width: 30%%" class="att_state_change"/>
						</group>					
					</group>
					<notebook class="qwertyuiop">
						<page string="Work Order Details" attrs="{'invisible': [('flag_order','!=',True)]}">
							<field colspan="4" name="line_ids" nolabel="1" attrs="{'readonly': [('state','not in',['draft'])]}" >
								<tree string = "Work Order Items" >
									<field name="order_id" readonly="1"/>
									<field name="item_code"/>
									<field name="item_name"/>
									<field name="position_id" readonly="1"/>
									<field name="moc_id" readonly="1"/>
									<field name="qty" required="1"/>										
									<field name="amount" required="1" readonly="1"/>
									<field name="remarks" widget="char"/>
									<field name="oth_spec" widget="char"/>
									<field name="dc_flag" invisible="1"/>
								</tree>
							</field>
						</page>
						<page string="Select Items">
							<field name="sc_line_ids" attrs="{'readonly': [('state','not in',['draft'])]}">
								<tree string="SC Items" create="false">
									<field name="order_no"/>
									<field name="order_delivery_date"/>
									<field name="order_priority" string="Category"/>
									<field name="pump_model_id"/>
									<field name="item_code" />
									<field name="item_name"/>
									<field name="moc_id"/>
									<field name="actual_qty"/>
									<field name="oth_spec" widget="char"/>
								</tree>
							</field>
							<button name="update_line_items" class="proceed_button" type='object' string="Proceed" attrs="{'invisible': [('state','not in',['draft'])]}"/>
						</page>
						
						<page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>
							<group>
								<group>
									<field name="user_id"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="update_date"/>
								</group>
							</group>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
	<!-- Form View End -->
		
	
	<!-- Tree View Start -->
		
		<record id="t_tree_v_sc_wo" model="ir.ui.view">
			<field name="name">Subcontract WO Tree</field>
			<field name="model">kg.subcontract.wo</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';black:state == 'confirmed'
						;black:state == 'confirmed_dc';gray:state == 'cancel'" 
						toolbar="True" string="Subcontract WO Tree">					
					<field name="name"/>
					<field name="entry_date"/>
					<field name="contractor_id"/>
					<field name="billing_type"/>
					<field name="wo_value"/>
					<field name="delivery_date"/>
					<field name="state"/>
					
				</tree>
			</field>
		</record>
		
	<!-- Tree View End -->
	
	<!-- WO SPL Tree View Start -->
		
		<record id="t_tree_v_sc_wo_spl" model="ir.ui.view">
			<field name="name">Subcontract WO Tree</field>
			<field name="model">kg.subcontract.wo</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree create="false" colors="blue:state == 'draft';black:state == 'confirmed'
						;black:state == 'confirmed_dc';gray:state == 'cancel'" 
						toolbar="True" string="Subcontract WO Tree">					
					<field name="name"/>
					<field name="entry_date"/>
					<field name="contractor_id"/>
					<field name="billing_type"/>
					<field name="wo_value"/>
					<field name="delivery_date"/>
					<field name="state"/>
					
				</tree>
			</field>
		</record>
		
	<!-- WO SPL Tree View End -->
	
	
	<!-- Subcontract WO Line Tree View Start -->
		
		<record id="t_tree_v_sc_wo_line" model="ir.ui.view">
			<field name="name">Subcontract WO Line Tree</field>
			<field name="model">ch.subcontract.wo.line</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
				<tree toolbar="True" string="Subcontract WO Line Tree">				
					<field name="order_id"/>
					<field name="order_delivery_date"/>					
					<field name="order_priority" string="Category"/>
					<field name="pump_model_id"/>					
					<field name="item_code" />
					<field name="read_flag" invisible="1"/>	
					<field name="item_name"/>
					<field name="moc_id"/>					
					<field name="qty" sum="Total SC Qty"/>
					<field name="pending_qty" sum="Total SC Qty"/>
					
					
				</tree>
			</field>
		</record>
		
	<!-- Subcontract WO Line Tree View End -->
	
	
	
	<!-- Subcontract WO Line Form View Start -->

		<record id="t_form_v_sc_wo_ch_line" model="ir.ui.view">
			<field name="name">Subcontract WO Line Form</field>
			<field name="model">ch.subcontract.wo.line</field>
			<field name="arch" type="xml">
				<form string="Subcontract WO Line" version="7.0">				
						
						<group>
							<group>
								<field name="order_id"/>								
								<field name="moc_id" attrs="{'readonly': [('entry_type','=','direct')]}"/>
								<field name="pattern_id" on_change="onchange_pattern(pattern_id)" attrs="{'readonly': [('entry_type','=','direct')]}"/>
								<field name="ms_shop_id" on_change="onchange_ms(ms_shop_id)" attrs="{'readonly': [('entry_type','=','direct')]}"/>
								<field name="read_flag" invisible="1"/>	
								<field name="entry_type" invisible="1"/>	
								<field name="qty" required="1" attrs="{'readonly': [('read_flag','=',True)]}"/>
								<field name="remarks"/>		
								<field name="oth_spec" widget="char"/>														
							</group>											
							<group>
								<field name="position_id" attrs="{'readonly': [('entry_type','=','direct')]}"/>
								<field name="pump_model_id" attrs="{'readonly': [('entry_type','=','direct')]}"/>		
								<field name="item_name" readonly="1"/>		
								<field name="pattern_name" readonly="1"/>																						
								<field name="amount" readonly="1"/>
							</group>					
						</group>
						<notebook>						
							<page string="Work Order Operation Details" >
								<field colspan="4" name="line_ids" nolabel="1" context="{'position_id':position_id,'moc_id':moc_id,'flag_read':read_flag}" >
									<tree string = "Work Order Operation Items" editable="bottom">
										<field name="operation_id" on_change="onchange_operation_rate(operation_id,position_id,moc_id)" attrs="{'readonly': [('flag_read','=',True)]}"/>
										<field name="stage_id" readonly="1"/>
										<field name="op_rate" widget="char" />																				
										<field name="position_id" invisible="1"/>										
										<field name="flag_read" invisible="1"/>										
										<field name="moc_id" invisible="1"/>																
										<field name="remarks" widget="char" attrs="{'readonly': [('flag_read','=',True)]}"/>										
									</tree>
								</field>
							</page>
							
						</notebook>
					
				</form>
			</field>
		</record>
		
	<!-- Subcontract WO Line Form View End -->
	
	<!-- Search View Start -->

		<record id="t_search_v_sc_wo" model="ir.ui.view">
            <field name="name">Subcontract WO Search</field>
            <field name="model">kg.subcontract.wo</field>
            <field name="arch" type="xml">
                <search string="Subcontract WO Search">
					
					<field name="name" string="WO No."  filter_domain="[('name','ilike',self)]" />
					<field name="contractor_id" string="Contractor Name"  filter_domain="[('contractor_id','ilike',self)]" />
					
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>					
					<filter icon="terp-check" name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>				
				
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="WO No." icon="terp-gtk-select-all" domain="[]" context="{'group_by':'name'}"/>
						<filter string="Delivery Date" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'delivery_date'}"/>
						<filter string="Contractor" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'contractor_id'}"/>
						<filter string="State" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
						
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->		
			
		
		<!-- Menu Action Start -->
		
		
		<record id="tma_sc_wo" model="ir.actions.act_window">
			<field name="name">Subcontract WO</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.subcontract.wo</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="t_search_v_sc_wo"/>
			<field name="domain">[('state','in',('draft','confirmed','approved','approved_dc','cancel')),('flag_app','=',False)]</field>
		</record>
		
		 <record model="ir.actions.act_window.view" id="tma_sc_wo_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="t_tree_v_sc_wo"/>
            <field name="act_window_id" ref="tma_sc_wo"/>
        </record>
        <record model="ir.actions.act_window.view" id="tma_sc_wo_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_sc_wo"/>
            <field name="act_window_id" ref="tma_sc_wo"/>
        </record>
		
	<!-- Menu Action End-->
	
	<!-- Menu Action Start -->
		
		
		<record id="tma_sc_wo_spl" model="ir.actions.act_window">
			<field name="name">Special Approval WO</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.subcontract.wo</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="t_search_v_sc_wo"/>
			<field name="domain">[('state','=','confirmed'),('flag_app','=',True)]</field>
		</record>
		
		 <record model="ir.actions.act_window.view" id="tma_sc_wo_tree_view_spl">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="t_tree_v_sc_wo_spl"/>
            <field name="act_window_id" ref="tma_sc_wo_spl"/>
        </record>
        <record model="ir.actions.act_window.view" id="tma_sc_wo_form_view_spl">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_sc_wo"/>
            <field name="act_window_id" ref="tma_sc_wo_spl"/>
        </record>
		
	<!-- Menu Action End-->

	
	<!-- Audit Log Xml Data Start -->
		
        <record id="audit_sc_wo" model="audittrail.rule">
            <field name="name">Audit Subcontract WO</field>
            <field name="object_id" eval="ref('kg_subcontract_process.model_kg_subcontract_wo')"/>       
            <field name="state">subscribed</field>              
        </record>
        
    <!-- Audit Log Xml Data End-->
    
    <!-- Sequence Number Setting Starts Here -->
	
	<record forcecreate="1" id="seq_type_subcontract_wo" model="ir.sequence.type">	
		<field name="name">KG Subcontract WO</field>
		<field name="code">kg.subcontract.wo</field>
	</record>

	<record forcecreate="1" id="seq_subcontract_wo" model="ir.sequence">
	  <field name="name">KG Subcontract WO</field>
	  <field name="code">kg.subcontract.wo</field>
	  <field name="padding" eval="3"/>
	  <field name="prefix">WO/%(year)s/%(month)s/</field>
	  <field name="reset_sequence">fiscal_reset</field>
	</record>
	
	<!-- Sequence Number Setting Ends Here -->	
	
	
	<!-- DC Karthikeyan Started -->	
	
	<!-- Subcontractor DC Starts Here -->
	
	<!-- Form View Start -->

		<record id="t_form_v_sc_dc" model="ir.ui.view">
			<field name="name">Subcontract DC Form</field>
			<field name="model">kg.subcontract.dc</field>
			<field name="arch" type="xml">
				<form string="Subcontract DC" version="7.0">
					<header>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
					</header>
					<group>
						<group>
							<field name="name"/>
							<field name="transfer_type" required="1" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>
							<field name="annexure_no" required="1" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>
							<field name="to_division_id" attrs="{'invisible': [('transfer_type','=','sub_contractor')],'required': [('transfer_type','=','internal')],'readonly': [('state','in',['confirmed','cancel'])]}"/>
							<field name="contractor_id" on_change="onchange_contractor(contractor_id)"  attrs="{'readonly': [('state','in',['confirmed','cancel'])], 'invisible': [('transfer_type','=','internal')],'required': [('transfer_type','=','sub_contractor')]}"/>	
							<field name="phone" readonly="1" attrs="{'invisible': [('transfer_type','=','internal')]}"/>												
							
						</group>											
						<group>
							<field name="entry_date" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>								
							<field name="annexure_date" required="1" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>								
							<field name="division_id" readonly="1"/>
							<field name="contact_person" readonly="1" attrs="{'invisible': [('transfer_type','=','internal')]}"/>
							<field name="vehicle_detail" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}" required="1"/>			
							<field name="flag_dc" invisible="1"/>			
							<field name="entry_mode" invisible="1"/>	
							<field name="state" readonly="1" style="width: 30%%" class="att_state_change"/>		
						</group>					
					</group>
					<notebook>
						<page string="DC Details" attrs="{'invisible': [('flag_dc','!=',True)]}">
							<field colspan="4" name="line_ids" nolabel="1" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}">
								<tree string = "Work Order Items" editable="bottom">
									<field name="order_id" readonly="1"/>
									<field name="item_code" readonly="1"/>
									<field name="item_name" readonly="1"/>
									<field name="position_id" readonly="1"/>
									<field name="moc_id" readonly="1"/>
