<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!-- Product Master form view -->

	<record model="ir.ui.view" id="kg_product_form_inherit">
        <field name="name">kg.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">		
		<!-- not working and name changed in in base module
		<field name="categ_id" string="Major Name" position="after">
			<label for="minor_name" class="oe_edit_only"/>
			<h2><field name="minor_name"/></h2>
		</field>
		-->
		
		<field name="categ_id" position="after">
			<group>
				<field name="capital" invisible="1"/>
				<field name="abc" invisible="1"/>
			</group>
		</field>
		<!--<field name="product_code" position="after">
			<label for = "moc_id"></label>
				<field name="moc_id" required="0"/>
		</field>
		-->
		<field name="variants" position="replace">
		<field name="variants" invisible="1"/>
		</field>
		
		<field name="price_extra" position="replace">
		<field name="price_extra" invisible="1"/>
		</field>
		<field name="price_margin" position="replace">
		<field name="price_margin" invisible="1"/>
		</field>
		<field name="uom_id" position="before">
		<field name="product_type"/>
		</field>
		
		<field name="uom_id" position="after">
		<field name="uom_po_id" attrs="{'readonly':[('state','=','approved')]}"/>
		<field name="po_uom_coeff" placeholder="UOM * PO Coeff = 1 POM" attrs="{'readonly':[('state','=','approved')]}"/>
		</field>
			
		<field name="list_price" position="replace">
		</field>
		
		<field name="sale_ok" position="replace">
        <field name="sale_ok" invisible="1"/>
        </field>
        
        <field name="sale_ok" invisible="1" position="after">
			<group string='Remarks' attrs="{'invisible':[('state','=','draft')]}">
				<group>	
					<field name="remark" attrs="{'invisible':[('state','=','draft')], 'readonly': [('state','in',['approved','reject'])]}"/>
				</group>
			</group>
		</field>
		
		 <xpath expr = "//page[@string='Suppliers']" position="after">
				<page string="Entry Info">
					<group>
						<group>
							<field name="user_id"/>
							<field name="conf_user_id" attrs="{'invisible':[('state','in',['draft'])]}"/>
							<field name="app_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject'])]}"/>
							<field name="rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirmed','approved'])]}"/>		
							<field name="update_user_id"/>					
						</group>
						<group>
							<field name="crt_date"/>
							<field name="confirm_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
							<field name="approve_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','reject'])]}"/>
							<field name="reject_date" attrs="{'invisible':[('state','in',['draft', 'confirmed','approved'])]}"/>	
							<field name="update_date"/>						
						</group>
					</group>
				</page>
		</xpath>
		</field>
	</record>
	
	<record model="ir.ui.view" id="kg_product_field_hidden_inherit">
        <field name="name">kg.product.field.hidden.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_form_view"/>
        <field name="arch" type="xml">
			<group>
		<field name="variants" position="replace">
		<field name="variants" invisible="1"/>
		</field>	
		<field name="price_extra" position="replace">
		<field name="price_extra" invisible="1"/>
		</field>
		<field name="price_margin" position="replace">
		<field name="price_margin" invisible="1"/>
		</field>
		</group>

		</field>
	</record>
	
	<record model="ir.ui.view" id="kg_product_tree">
		<field name="name">product.product.tree</field>
		<field name="model">product.product</field>
		<field name="inherit_id" ref="product.product_product_tree_view"/>
		<field name="arch" type="xml">
			
			<field name="latest_price" position="after"> 
			<field name="product_type" invisible="1"/> 
			</field>					
			
		</field>
	</record>
			
	<!-- Product Master Template form view  
	
	<record model="ir.ui.view" id="kg_product_template_form_inherit">
        <field name="name">kg.product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
			
		</field>
	</record>
-->
	<record id="kg_action_product_form" model="ir.actions.act_window">
		<field name="name">Product Master Design</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.product</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form,kanban</field>
		<field name="context">{'default_product_type': 'ms',}</field>
		<field name="domain">[('product_type','in',('raw','ms','bot')),]</field>
		<!--<field name="search_view_id" ref="base.view_res_partner_filter"/>
		-->
	</record>
	
	
	
	    </data>
</openerp>
