<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
			
	<!-- Form View Start -->

		<record id="t_form_v_sc_invoice" model="ir.ui.view">
			<field name="name">Subcontract Invoice Form</field>
			<field name="model">kg.subcontract.invoice</field>
			<field name="arch" type="xml">
				<form string="Subcontract Invoice" version="7.0">
					<header>
						<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight" confirm="Are you sure to proceed ?"/>
					</header>
					<group>
						<group>
							<field name="name"/>							
							<field name="contractor_id" on_change="onchange_contractor(contractor_id)"  attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>	
							<field name="phone" readonly="1" />																			
							
						</group>											
						<group>
							<field name="entry_date" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>							
							<field name="inward_id" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}"/>									
							<field name="contact_person" readonly="1" />									
							<field name="flag_invoice" invisible="1"/>	
							<field name="state" readonly="1" style="width: 30%%" class="att_state_change"/>		
								
						</group>					
					</group>
					<notebook>
						<page string="Invoice Details" attrs="{'invisible': [('flag_invoice','!=',True)]}">
							<field colspan="4" name="line_ids" nolabel="1" attrs="{'readonly': [('state','in',['confirmed','cancel'])]}">
								<tree string = "Invoice Items">
									<field name="order_no" readonly="1"/>
									<field name="item_code" readonly="1"/>
									<field name="item_name" readonly="1"/>
									<field name="position_id" readonly="1"/>
									<field name="moc_id" readonly="1"/>
									<field name="operation_id" required="1" widget="many2many_tags" readonly="1"/>
									<field name="qty" required="1" on_change="onchange_total_value(qty,value)"/>																				
									<field name="value" required="1" on_change="onchange_total_value(qty,value)"/>
									<field name="total_value" readonly="1" />
									<field name="com_weight" readonly="1"/>										
									<field name="remark" widget="char"/>
								</tree>
							</field>
						</page>
						<page string="Select Items">
							<field name="inward_subcontract_line_ids" attrs="{'readonly': [('state','in',['confirmed'])]}">
								<tree string="Inward Items" create="false">
									<field name="order_no"/>
									<field name="order_delivery_date"/>
									<field name="order_priority" string="Category"/>
									<field name="pump_model_id"/>
									<field name="item_code" />
									<field name="item_name"/>
									<field name="moc_id"/>										
								</tree>
							</field>
													
							
							<button name="update_line_items" type='object' string="Proceed" attrs="{'invisible': [('state','in',['confirmed'])]}"/>
						</page>
						
						<page string="Entry Info">
							<group>
								<field name="company_id"/>
							</group>
							<group>
								<field name="active"/>
							</group>
							<group>
								<group>
									<field name="user_id"/>
									<field name="update_user_id"/>
								</group>
								<group>
									<field name="crt_date"/>
									<field name="update_date"/>
								</group>
							</group>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
	<!-- Form View End -->
		
	
	<!-- Tree View Start -->
		
		<record id="t_tree_v_sc_invoice" model="ir.ui.view">
			<field name="name">Subcontract Invoice Tree</field>
			<field name="model">kg.subcontract.invoice</field>
			<field eval="8" name="priority"/>
			<field name="arch" type="xml">
					<tree colors="blue:state == 'draft';black:state == 'confirmed';
						gray:state == 'cancel'" 
						toolbar="True" string="Subcontract Invoice Tree">							
					<field name="name"/>
					<field name="entry_date"/>					
					<field name="state"/>				
				</tree>
			</field>
		</record>
		
	<!-- Tree View End -->
	
	
	<!-- Subcontract Invoice Line Form View Start -->

		<record id="t_form_v_sc_wo_ch_line" model="ir.ui.view">
			<field name="name">Subcontract Invoice Line Form</field>
			<field name="model">ch.subcontract.invoice.line</field>
			<field name="arch" type="xml">
				<form string="Subcontract Invoice Line" version="7.0">				
						
						<group>
							<group>
								<field name="order_no"/>
								<field name="order_priority"/>
								<field name="item_code"/>
								<field name="moc_id"/>
								<field name="qty" readonly="1"/>
								<field name="remark"/>								
																
							</group>											
							<group>
								<field name="position_id"/>
								<field name="pump_model_id"/>
								<field name="item_name"/>							
								<field name="total_value" readonly="1" />								
							</group>					
						</group>
						<notebook>						
							<page string="Work Order Operation Details" >
								<field colspan="4" name="wo_op_id" nolabel="1" readonly = "1">
									<tree string = "Work Order Operation Items" editable="bottom">
										<field name="operation_id" />
										<field name="op_rate"/>										
										<field name="position_id" invisible="1"/>										
										<field name="moc_id" invisible="1"/>										
										<field name="remarks" widget="char"/>										
									</tree>
								</field>
							</page>
							
						</notebook>
					
				</form>
			</field>
		</record>
		
	<!-- Subcontract Invoice Line Form View End -->
	
	<!-- Search View Start -->

		<record id="t_search_v_sc_invoice" model="ir.ui.view">
            <field name="name">Subcontract Invoice Search</field>
            <field name="model">kg.subcontract.invoice</field>
            <field name="arch" type="xml">
                <search string="Subcontract Invoice Search">
					
					<field name="name" string="Invoice No."  filter_domain="[('name','ilike',self)]" />
					
					
					<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
					<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>					
					<filter icon="terp-check" name="cancel" string="Cancelled" domain="[('state','=','cancel')]"/>				
				
					<separator/>
                    <group expand="0" string="Group By...">
						<filter string="Invoice No." icon="terp-gtk-select-all" domain="[]" context="{'group_by':'name'}"/>		
						
						<filter string="State" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
						
					</group>
                </search>
			</field>
		</record>
		
	<!-- Search View End -->		
			
		
		<!-- Menu Action Start -->
		
		
		<record id="tma_sc_invoice" model="ir.actions.act_window">
			<field name="name">Subcontract Invoice</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.subcontract.invoice</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="search_view_id" ref="t_search_v_sc_invoice"/>
		</record>
		
		 <record model="ir.actions.act_window.view" id="tma_sc_invoice_tree_view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="t_tree_v_sc_invoice"/>
            <field name="act_window_id" ref="tma_sc_invoice"/>
        </record>
        <record model="ir.actions.act_window.view" id="tma_sc_invoice_form_view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="t_form_v_sc_invoice"/>
            <field name="act_window_id" ref="tma_sc_invoice"/>
        </record>
		
		<!-- Menu Action End-->

		<menuitem action="tma_sc_invoice" id="tam_sc_invoice" parent="kg_subcontract_process.tpm_sc_process" sequence="6" />	
	
		
	</data>
</openerp>
