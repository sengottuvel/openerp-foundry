<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
	<!-- Form View -->
	
	<record id="kg_customer_advance_view" model="ir.ui.view">
			<field name="name">kg.customer.advance.form.view</field>
			<field name="model">kg.customer.advance</field>
			<field name="arch" type="xml">
				<form string="Customer Advance" version="7.0">
				
				<header>
					<button name="entry_reject" type="object" string="Reject" states="confirmed" class="oe_highlight" />
					<button name="entry_approve" type="object" string="Approve" attrs="{'invisible': [('state','!=','confirmed')]}" class="oe_highlight" />
					<button name="entry_draft" type="object" string="Set Draft" states="cancel" class="oe_highlight"/>
					<button name="entry_confirm" type="object" string="Confirm" states="draft" class="oe_highlight"/>
					<button name="entry_cancel" type="object" string="Cancel" states="approved" class="oe_highlight"/>
					
				</header>
					
					<group>
						<group>
							
							<field name="name"/>
							<field name="customer_id"/>
							<field name="order_id" on_change = "onchange_order_id(order_id,advance_amt)"/>
							<field name="advance_amt" on_change = "onchane_adv_amt(order_id,advance_amt,net_amt)"/>
							<field name="bal_adv" />							
							<field name="confirm_flag" invisible="1"/>
							<field name="approve_flag" invisible="1"/>
							<field name="active"/>	
						</group>
						<group>
							
							<field name="advance_date"/>
							<field name="net_amt"/>
							<field name="balance_advance_amt"/>
							<field name="amt_paid_so_far"/>							
							<field name="state" invisible="1"/>
							<field name="line_state" invisible="1"/>
						</group>
					</group>
					
					<group>
					<field name="cancel_remark" attrs="{'invisible': [('state', 'not in', ('approved','cancel'))]}"/>
					</group>
					<button name="load_order_details" type="object" string="Load Order Advance Details" attrs="{'invisible':[('confirm_flag','=',True)]}"/>
					
					<notebook>
					
					<page string="Customer Advance Details">					
					<group>
						<group>
							<field name="line_ids" nolabel="1">
								<tree editable="bottom">
									<field name="advance_no" />
									<field name="advance_date" />
									<field name="adv_amt" />
									<field name="balance_net_amt" />
									
								</tree>
							</field>
						</group>
					</group>
					
					 </page>
                <page string="Entry Info">
					<group>
						<field name="company_id"/>
					</group>
					<group>
						<group>
							<field name="created_by"/>
							<field name="confirmed_by" attrs="{'invisible':[('state','in',['draft'])]}"/>
							<field name="rej_user_id" attrs="{'invisible':[('state','in',['draft', 'confirm','approved','cancel'])]}"/>
							<field name="approved_by" attrs="{'invisible':[('state','in',['draft','rejected','confirm'])]}"/>
							<field name="cancel_user_id" attrs="{'invisible':[('state','in',['draft', 'confirm','rejected','approved'])]}"/>
							<field name="update_user_id"/>
						</group>
						<group>
							<field name="creation_date"/>
							<field name="confirmed_date" attrs="{'invisible':[('state','in',['draft'])]}"/>
							<field name="reject_date" attrs="{'invisible':[('state','in',['draft', 'confirm','approved','cancel'])]}"/>
							<field name="approved_date" attrs="{'invisible':[('state','in',['draft','rejected','confirm'])]}"/>
							<field name="cancel_date" attrs="{'invisible':[('state','in',['draft', 'confirm','rejected','approved'])]}"/>
							<field name="update_date"/>
						</group>
					</group>
				</page>
				</notebook>
					<group>
						<field name="remark" placeholder="Remarks"/>
					</group>
					</form>
			</field> 
	  

		</record>
		
		
	 <!-- Tree View -->
		
		<record id="kg_customer_advance_tree_view" model="ir.ui.view">
			<field name="name">kg.customer.advance.tree.view</field>
			<field name="model">kg.customer.advance</field>
			<field name="arch" type="xml">
				<tree colors="blue:state == 'draft';red:state == 'confirmed'
						;black:state == 'approved'" 
								toolbar="True" string="Customer Advance">	
					
					<field name="name"/>
					<field name="order_id"/>
					<field name="customer_id"/>
					<field name="advance_amt"/>
					<field name="advance_date"/>
					<field name="created_by"/>
					<field name="creation_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
	
	 
	<!-- Search View -->
		
	<record id="customer_advance_search_view" model="ir.ui.view">
		<field name="name">Customer Advance</field>
		<field name="model">kg.customer.advance</field>
		<field name="arch" type="xml">
			<search string="Customer Advance">
				<field name="name" string="Advance No" filter_domain="[('name','ilike',self)]"/>
				<filter icon="terp-check" name="draft" string="Draft" domain="[('state','=','draft')]"/>
				<filter icon="terp-check" name="confirmed" string="Confirmed" domain="[('state','=','confirmed')]"/>
				<filter icon="terp-check" name="approved" string="Approved" domain="[('state','=','approved')]"/>
				<separator/>
				<group expand="0" string="Group By...">
					<filter string="Date" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'advance_date'}"/>
					<filter string="Created By" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'created_by'}"/>
					<filter string="Status" icon="terp-gtk-select-all" domain="[]" context="{'group_by':'state'}"/>
				</group>
			</search>
		</field>
	</record>
	
	 <!-- Action -->
		
		 <record id="kg_customer_advance_action_form" model="ir.actions.act_window">
			<field name="name">Customer Advance</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kg.customer.advance</field>
			<field name="view_type">form</field>
			<field name="context">{}</field>
			<field name="view_id" ref="kg_customer_advance_tree_view"/>
			<field name="search_view_id" ref="customer_advance_search_view"/>
		</record>
		
		
		<record forcecreate="1" id="seq_type_invoice_advance" model="ir.sequence.type">	
			<field name="name">KG Invoice Advance</field>
			<field name="code">kg.customer.advance</field>
		</record>

		<record forcecreate="1" id="seq_invoice_advance" model="ir.sequence">
		  <field name="name">KG Invoice Advance</field>
		  <field name="code">kg.customer.advance</field>
		  <field name="padding" eval="3"/>
		  <field name="prefix">AD/%(year)s/</field>
		  <field name="reset_sequence">fiscal_reset</field>
		</record>
			 
	 <!-- Menu Items -->
		
			<menuitem id="kg_advance_menu" name="Advance"
						parent="kg_sale_invoice.menu_kg_sale_root" sequence="1"/>
			<menuitem 
				id="menu_kg_customer_advance" 
				name="Customer Advance" 
				parent="kg_advance_menu"
				sequence="1"
				action="kg_customer_advance_action_form" />

</data>
	</openerp>
